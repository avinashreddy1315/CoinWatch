{
  "manifest_version": 3,
  "name": "CryptoWatch",
  "version": "1.0.0",
  "description": "CoinWatch cryptoCurrency price tracking Extension",
  "action": {
    "default_popup": "index.html",
    "default_title": "open"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://api.coingecko.com/"
      ],
  "icons": {
    "16": "logo-16.png",
    "32": "logo-32.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';",
    "script-src": [
      "self",
      "https://api.coingecko.com/"
    ]
  }
}