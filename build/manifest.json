{
  "manifest_version": 3,
  "name": "CoinWatch",
  "version": "1.5.0",
  "description": "A extension for cryptocurrency enthusiasts. Track prices, access detailed info, visualize trends, and manage favorite coins.",
  "action": {
    "default_popup": "index.html",
    "default_title": "open"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "https://api.coingecko.com/"
  ],
  "icons": {
    "16": "logo-16.png",
    "32": "logo-32.png",
    "48": "logo-48.png",
    "128": "logo-128.png"
  },
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  }
}
